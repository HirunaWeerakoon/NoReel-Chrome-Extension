{
  "manifest_version": 3,
  "name": "Focus Mode: No Shorts",
  "version": "1.2",
  "permissions": ["scripting", "storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.instagram.com/*",
    "*://*.facebook.com/*"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.instagram.com/*",
        "*://*.facebook.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}